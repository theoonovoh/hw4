<h1>New User Account</h1>

<form action="/users" method="post">
  <div class="mb-3">
    <label for="username" class="form-label">Username</label>
    <input type="text" name="user[username]" id="username" class="form-control">
  </div>
  
  <div class="mb-3">
    <label for="email" class="form-label">Email</label>
    <input type="email" name="user[email]" id="email" class="form-control">
  </div>
  
  <div class="mb-3">
    <label for="password" class="form-label">Password</label>
    <input type="password" name="user[password]" id="password" class="form-control">
  </div>
  
  <!-- Add CSRF token for Rails security -->
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  
  <button type="submit" class="btn btn-primary">Signup</button>
</form>

<p class="mt-3">Already have an account? <a href="/login" class="btn btn-outline-primary">Login</a></p>